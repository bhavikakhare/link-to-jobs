<div class="bootstrap-overrides">
  <html>


    <body>
      <h1 style="padding: 10px"> Company </h1>


      <%= bootstrap_form_with model: @company, url: companies_path, method: :post, local: true do |f| %>

        <div id='bootstrap-overrides'>
          <%= f.text_field :name %>
          <%= f.text_area :description %>
          <%= f.select :size, options_for_select(['small', 'medium', 'big'], "medium") %>
          <%= f.number_field(:year_established, label: "Year of establishment" ) %>
          <%= f.text_field :email %>
          <%= f.number_field :phone_number %>
          <%= f.text_area :address %>
        </div>
        <%= f.submit "Create", class: "btn btn-success float-left"  %>
        <%= link_to 'Cancel', :back, class:"btn btn-danger float-right" %>
      <% end %>
    </body>

  </html>
</div>