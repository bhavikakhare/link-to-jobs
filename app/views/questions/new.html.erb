<h1>Add New Custom Questions</h1>

<%= form_with model: @question, url: new_jp_question_path, method: :post, local: true do |f| %>

    <%= f.text_field :question %>
    <%= f.submit %>

<% end %>

<p class="mt-3">
  <%= link_to 'Cancel', new_job_posting_path(@job_posting), class: 'btn btn-outline-secondary' %>
</p>

<p class="mt-3">
  <%= link_to 'Add More', new_jp_question_path(@job_posting), class: 'btn btn-outline-secondary' %>
</p>

<h1>Questions</h1>

<table class="table table-striped table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Question</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question %></td>
      </tr>
    <% end %>
  </tbody>

</table>

