<h2>Sign up</h2>
<br /><br />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <br />

  <div class="field">
    First Name<br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true %>
  </div>

  <br />

  <div class="field">
    Last Name<br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true %>
  </div>

  <br />

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <br />

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <br />

  <div class="field">
  <ul style="list-style-type:none; padding-left: 0">
    <%= f.collection_radio_buttons(:is_recruiter, [
      [false, 'Applicant (You will be applying for jobs)'], 
      [true, 'Recruiter (You work for a company as a recruiter and will be making job postings)']
      ], :first, :second, { checked: false }) do |b| %>
      <li>
      <%= b.radio_button %> <%= b.text %>
      </li>
    <% end %>
  </ul>
  </div>
  
  <br />

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
