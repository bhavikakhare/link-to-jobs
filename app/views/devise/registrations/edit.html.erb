<html>
    <head>
      <style>
      {box-sizing: border-box;}

      .column {float: left;width: 50%;}

      .row:after {content: "";display: table;clear: both;}

      .input-info { width: 400px  }
      </style>
  </head>

  <body>

    <%= render "devise/shared/error_messages", resource: resource %>
    <h2>Profile of <%= current_user.first_name.capitalize  %> <%= current_user.last_name.capitalize %> </h2>    
    <% if !current_user.is_recruiter %>
      <p><%= link_to 'See Your Active Job Applications', job_applications_a_path(current_user) %></p>

      <%= link_to "Your Profile", user_profile_path(current_user) %>

    <% end %>
    <br /><br />

    <% if current_user.is_recruiter == true %>

      <h2>
        My Job Postings
      </h2>

      <table class="table table-hover">

        <thead class="thead-dark">
          <tr>
            <th>Job Title</th>
            <th>Category</th>
            <th>Company</th>
            <th></th>
            <th> </th>
          </tr>
        </thead>

        <tbody>
          <% @user.companies.each do |c| %>
            <% c.job_postings.each do |jp| %>
                <tr>
                  <td><%= link_to jp.title, job_posting_path(jp) %></td> 
                  <td>tag</td>
                  <td><%= c.name %></td>
                  <td><%= link_to 'Applications', job_applications_r_path(current_user, jp) %></td>
                </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <%=link_to "+ NEW job posting", new_job_posting_path %>
      <%=link_to "+ NEW company", new_company_path %>

    <% end %>

    <% if @user.is_recruiter == true %>
      <div class="column" style="background-color:#FFFFFF; float:right">
          <h2>My companies</h2>
            <table>
              <% @user.companies.each do |c| %>
                <tr>
                  <th><%= link_to c.name, company_path(c) %></th>
                </tr>
                
              <% end %>
            </table>
      </div>
    <% end %>

    <div class="">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, style: "width: 80%"}) do |f| %>          

        <div class="float-left">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "input-info" %>
          </div><br />

          <div class="field ">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true, class: "input-info" %>
          </div><br />

          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true, class: "input-info" %>
          </div><br />

          <% if @user.is_recruiter == false %>

            <div class="field">
              <%= f.label :phone_number %><br />
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "input-info" %>
            </div><br />

            <div class="field">
              <%= f.label :address %><br />
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "input-info" %>
            </div><br />

            <div class="field">
              <%= f.label :highest_degree %><br />
              <%= f.select :highest_degree, ['Associate',"Bachelor's","Master's","Doctoral"], autofocus: true, class: "input-info" %>
            </div><br />

            <div class="field">
              <%= f.label :highest_degree_school %><br />
              <%= f.text_field :highest_degree_school, autofocus: true, autocomplete: "highest_degree_school", class: "input-info" %>
            </div><br />

          <% end %>

          <br />
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current Password", required: true %>
          </div><br />

          <div class="field">
            <%= check_box_tag "change-password" %> Change Password?
          </div><br />

          <div id="new-password" style="display:none;">

            <div class="field">
              <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password" %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div><br />          

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "New Password Confirmation" %>
            </div><br />

          </div>

          <script type="text/javascript">
            var checkbox = document.getElementById('change-password');
            var details_div = document.getElementById('new-password');
            checkbox.onchange = function() {
              if(this.checked) {
                details_div.style['display'] = 'block';
              } else {
                details_div.style['display'] = 'none';
              }
            };
          </script>

          <div class="actions">
            <%= f.submit "Update" , class: "btn btn-primary"%>
          </div><br /><br />
        </div>

        <% if @user.is_recruiter == false %>     
          <div class="float-right">
            <b>Categories of Interest</b><br />
            <div class="field">
              <%= f.collection_check_boxes(:tag_list, valid_interests, :first, :first) do |b| %>
                <div class="form-check">
                  <% if !@user.tag_list.include?(b.value.downcase) %>
                    <label class="form-check-label"><%= b.check_box class: 'form-check-input' %> <%= b.value %></label>
                  <% end %>
                  <% if @user.tag_list.include?(b.value.downcase) %>
                    <%= b.label(class: "form-check-label") { b.check_box(checked: true, class: "form-check-input") + b.value }  %> 
                  <% end %>
                </div>
              <% end %>
            </div><br /> 
          </div>    
        <%end%>

      <% end %>
    </div>

    <div style="clear: both">
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
      <br/>
      <p><%= link_to "Back", :back, class: "btn btn-warning" %></p>
    </div>

  </body>

</html>
